<section class="w3-content" style="max-width:1100px">
  <div class="w3-container w3-padding-64 w3-center">
    <h1>Hi <%= current_user.email %>! </h1><br>
    <p><h4>Here are your reservations:</h4></p>
    <br>
    <% @user.reservations.each_with_index do |r, i|%>
      <%= (i+1).ordinalize %> reservation: <br>
      <h3><%= link_to("#{r.restaurant.name}", restaurant_path(r.restaurant)) %></h3>
      <%= r.date %> AT <%= r.time_slot.in_time_zone('EST').strftime("%I:%M %p") %> for party of <%= r.party_size %>
      <p>
      <%= link_to "Edit", edit_restaurant_reservation_path(r.restaurant.id, r.id) %> <%= link_to "Delete", restaurant_reservation_path(r.restaurant.id, r.id), method: :delete, data: {confirm: "Are you sure you want to delete this Reservation?"} %><br><br>
      </p>

    <% end  %>

  </div>
</section>
