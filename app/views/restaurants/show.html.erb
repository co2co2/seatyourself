
<br>
<% unless current_user && (@restaurant.owner != current_user.id) %>
 <p> <%= button_to "Edit my Restaurant", edit_restaurant_path, :method => 'get'%> </p>
 <p>All Reservations</p>
  <%@restaurant.reservations.each_with_index do |r,i|%></h3>
    <% if r.id != nil %>
     <%= i+1 %>: <%= r.date %> <%= r.time_slot %> <%= r.party_size %> <br>
     <% end %>
  <% end  %>
<% else %>
<% end %>
<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p>Neighborhood: <%= @restaurant.neighborhood %></p><br>
<p>Price Range:<%= @restaurant.price_range %></p>
<p>Menu: <%= @restaurant.menu %></p>
<p>Summary: <%= @restaurant.summary %></p><br>


<h4>From <%= @restaurant.open_hour.in_time_zone('EST').strftime('%I:%M %p') %> to <%= @restaurant.close_hour.in_time_zone('EST').strftime('%I:%M %p') %> everyday!
</h4>

<h4>New Reservation</h4>

<%= render 'reservations/form',  restaurant: @restaurant, reservation: @reservation %>

<br>
<%= link_to("restaurants Page", restaurants_path) %>
