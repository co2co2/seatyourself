<div class="w3-container w3-padding-64">
  <h1 class="w3-center">Sign In</h1>

  <%= form_tag session_path do %>

  <div>
    <%=  label_tag :email %><br>
    <%=  text_field_tag :email, nil, class: 'w3-input w3-padding-16' %>
  </div>

  <div>
    <%=  label_tag :password %><br>
    <%=  password_field_tag :password, nil, class: 'w3-input w3-padding-16' %>
  </div>

  <div>
    <%=  submit_tag "Sign In", class: "w3-button w3-light-grey w3-section" %>
  </div>
  <% end  %>
<%= button_to "Create new account", new_user_path, :method => 'get', class: "w3-button w3-light-grey w3-section"%>
</div>
